type Query {
    employees: [Employee]
}
type Mutation {
    updateSalary(input: UpdateSalaryInput!): UpdateSalaryPayload
}
type Employee {
    id: ID!
    name: String!
    # restricted
    salary: String!
}

input UpdateSalaryInput {
    employeeId: ID!
    newSalary: String!
}
type UpdateSalaryPayload {
    success: Boolean
    employee: Employee
    salary: SalaryInput
}
type SalaryInput{
  employeeId: employeeId
  newSalary :newSalary
}